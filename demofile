pipeline {
    agent any
    environment {
        BRANCH_NAME = "${env.BRANCH_NAME}"
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: BRANCH_NAME, url: 'https://github.com/Arjun02BH/Maven-Project.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            when {
                anyOf {
                    branch 'main'
                    branch 'master'
                }
            }
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                // Deploy only from the main branch
                sh 'mvn deploy'
            }
        }
        stage('Initial Setup') {
            when {
                branch 'firstcommit'
            }
            steps {
                echo 'Running initial setup tasks for firstcommit branch...'
                // Add any setup-specific commands here
            }
        }
    }
    post {
        success {
            echo "Pipeline for branch ${BRANCH_NAME} executed successfully!"
        }
        failure {
            echo "Pipeline for branch ${BRANCH_NAME} failed!"
        }
    }
}
