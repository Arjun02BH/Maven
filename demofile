pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                sh '''
                git clone -b ${BRANCH_NAME} https://github.com/Arjun02BH/Maven-Project.git .
                '''
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            when {
                anyOf {
                    branch 'main'
                    branch 'master'
                }
            }
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                sh 'mvn deploy'
            }
        }
        stage('Initial Setup') {
            when {
                branch 'firstcommit'
            }
            steps {
                echo 'Running initial setup tasks for firstcommit branch...'
            }
        }
    }
    post {
        success {
            echo "Pipeline for branch ${env.BRANCH_NAME} executed successfully!"
        }
        failure {
            echo "Pipeline for branch ${env.BRANCH_NAME} failed!"
        }
    }
}
